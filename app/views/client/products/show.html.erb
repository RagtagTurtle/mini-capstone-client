<h2><%= @product["name"] %></h2>
<h3>Price: <%= @product["formatted"]["price"] %></h3>
<h3>Tax: <%= @product["formatted"]["tax"] %></h3>
<h3>Total: <%= @product["formatted"]["total"] %></h3>
<h4>Description:<%= @product["description"] %></h4>

<% @product["images"].each do |image| %>
  <img src="<%= image["image_url_1"] %>">
<% end %> 
<br>
<%= form_tag "/client/carted_products", method: :post do  %>
<input type="hidden" name="product_id" value="<%= @product['id'] %>">
  <div>
    Quantity: <input type="text" name="quantity">
  </div>
  <input type="submit" value="Add To Cart, Yo">
<% end %>

<br>
<h5>Supplier: <%= @product["supplier"]["name"]  %></h5>
<a href="/client/products/ <%= @product['id'] %>/edit">Edit</a>
<a href="/client/products/ <%= @product['id'] %>" data-method="delete">Delete</a>